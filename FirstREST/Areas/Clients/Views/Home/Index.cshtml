@model List<FirstREST.Lib_Primavera.Model.Cliente>

@{
    ViewBag.Title = "Clients";
}

<table style="width:90%">
    <tr>
        <th>Client Code</th>
        <th>Name</th>
        <th>Total Sales YTD(€)</th>
    </tr>
    @foreach (var client in ViewBag.clients)
    {

        <tr>
            <td>@client.Client.CustomerID</td>
            <td>@client.Client.CustomerName</td>
            <td>10</td>
        </tr>

        <tr style="border-bottom:1px solid #e6e6e6;">
            <td colspan="3">
                <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#@client.Client.CustomerTaxID" style="width:30px; height:20px; background-color:gray; opacity: 0.5; font-size: 10px;padding-left:0;">+info</button>
                <div id="@client.Client.CustomerTaxID" class="collapse">
                    <div class="row">
                        <div class="col-5">
                            <br />
                            <p>Código: @client.Client.CustomerID</p>
                            <p>Nome: @client.Client.CustomerName</p>
                            <p>E-mail: @client.Client.CustomerEmail</p>
                            <p>Morada: @client.Address</p>
                            <p>Número de Contribuinte: @client.Client.CustomerTaxID</p>
                            <h6>Total de Vendas: 10</h6>
                            <br />
                        </div>
                        <br />
                        <div class="col-5">
                            <img src="~/Images/avatar.jpg">
                            <br />
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>





