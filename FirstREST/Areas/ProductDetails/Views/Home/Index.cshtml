@{
    ViewBag.Title = "ProductDetails";
}

<div class="container-fluid">

    <div class="row">

        @foreach (var artigo in ViewBag.artigos)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-block">
                        <a href="@Url.Action("GetProduct", "Home", new {id = artigo.ProductCode })"><h4 class="card-title">@artigo.ProductCode</h4></a>
                        <h6 class="product-group card-subtitle mb-2">@artigo.ProductGroup</h6>
                        <p class="card-text">@artigo.ProductDescription</p>
                        <div class="availability">
                            @if (@artigo.ProductStock == 0)
                            {
                                <h5 class="unavailable">Unavailable</h5>
                            }
                            else
                            {
                                <h5 class="available">Available</h5>
                            }
                        </div>
                        <a href="#" class="card-link see-orders">See Orders</a><br/>
                        <a href="#" class="card-link">See warehouse distribution</a>

                    </div>
                </div>
            </div>
        }
    </div>

</div>
